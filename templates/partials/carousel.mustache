{{!
    @template theme_foundation/partials/carousel

    Alerts.

    Context variables required for this template:
    * carouselid - Carousel any.

    Example context (json):
    {
        "thealerts": [
            {"alerttype":"info", "alerttitle":"Tab 1", "alerttext":"<p>Alert one.</p>"},
            {"alerttype":"warning", "alerttitle":"Tab 2", "alerttext":"<p>Alert two.</p>"},
            {"alerttype":"primary", "alerttitle":"Tab 3", "alerttext":"<p>Alert three.</p>"}
        ]
    }
}}
{{#carouselid}}
<div id="{{carouselid}}" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {{#carouselindicators}}
        <li data-target="#{{carouselid}}" data-slide-to="{{indicatornumber}}"{{#indicatoractive}} class="active"{{/indicatoractive}}></li>
        {{/carouselindicators}}
    </ol>
    <div class="carousel-inner">
        {{#carouselslides}}
        <div class="carousel-item active">
            <img src="..." class="d-block w-100" alt="">
            <div class="carousel-caption d-none d-md-block">
                <h5>slide label</h5>
                <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
            </div>
        </div>
        {{/carouselslides}}
    </div>
    <a class="carousel-control-prev" href="#{{carouselid}}" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">{{#str}}previous{{/str}}</span>
    </a>
    <a class="carousel-control-next" href="#{{carouselid}}" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">{{#str}}next{{/str}}</span>
    </a>
  </div>
{{/carouselid}}
